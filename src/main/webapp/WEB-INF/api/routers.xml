<?xml version="1.0" encoding="UTF-8"?>
<root>
	<!--
		path 标签可循环嵌套，并且父级与子级的 class 同步有效，即 /a/..、/a/b/.. 同时有效。

		@name	必选		目录名称。
		@class	可选		解析的类，指定的类在实际访问时并不一定是该类，实例会根据版本或定制自动路由。


		使用示例：
		<path name="a" class="com.A" />
		
		<path name="b">
			<path name="c" class="com.C" />
		</path>
		
		<path name="d" class="com.D">
			<path name="e" class="com.E" />
		</path>
	-->


	<!-- 基础接口。 -->
	<path name="base">
		<path name="version" class="com.yy.web.base.Version" />
		<path name="user" class="com.yy.web.base.User" />
		<path name="checkCode" class="com.yy.web.base.CheckCode" />
		<path name="serial" class="com.yy.web.base.Serial" />
		<path name="util" class="com.yy.web.base.Util" />
		<path name="frontStorage" class="com.yy.web.base.FrontStorage" />
		<path name="dbConfig" class="com.yy.web.base.DBConfig" />
	</path>


	<!-- 收藏夹。 -->
	<path name="fav">
		<path name="fav" class="com.yy.web.site.fav.Fav" />
		<path name="category" class="com.yy.web.site.fav.Category" />
		<path name="screensHot" class="com.yy.web.site.fav.ScreensHot" />
		
		<path name="sys" class="com.yy.web.site.fav.Sys" />
	</path>


	<!-- 百图网。 -->
	<path name="tu" class="com.yy.web.site.tu.Tu">
		<path name="manage" class="com.yy.web.site.tu.Manage" />
		<path name="catchTest" class="com.yy.web.site.tu.CatchTest" />
	</path>
	
	
	<!-- 建站建设。 -->
	<path name="xiaozhan">
		<path name="manage" class="com.yy.web.site.xiaozhan.Manage" />
	</path>
	
	
	<!-- 服务器监控。 -->
	<path name="serverMonitor" class="com.yy.web.site.servermonitor.ServerMonitor" />
	
	
	<!-- IP 上报。 -->
	<path name="host" class="com.yy.web.site.host.HostApi" />
	
	
	<!-- 访问日志。 -->
	<path name="visitRecord">
		<path name="bi" class="com.yy.web.site.visitrecord.VisitRecordBIApi" />
	</path>
	
	
	<!-- 文件分享站。 -->
	<path name="file" class="com.yy.web.site.file.FileApi">
		<path name="manage" class="com.yy.web.site.file.FileManageApi" />
	</path>
	
	
	<!-- 房。 -->
	<path name="fang">
		<path name="city" class="com.yy.web.site.fang.CityApi" />
		<path name="area" class="com.yy.web.site.fang.AreaApi" />
		<path name="community" class="com.yy.web.site.fang.CommunityApi" />
		<path name="house" class="com.yy.web.site.fang.HouseApi" />
		<path name="transaction" class="com.yy.web.site.fang.TransactionApi" />
		
		<path name="intermediary" class="com.yy.web.site.fang.IntermediaryApi" />
		<path name="intermediaryCity" class="com.yy.web.site.fang.IntermediaryCityApi" />
		
		<path name="manage" class="com.yy.web.site.fang.ManageApi" />
	</path>
</root>

